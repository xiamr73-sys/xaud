  18          void Driver_Init(void)
  19          {
  20   1          DRV_ARR = PWM_VALUE_LOAD - 1;       // 载波频率的周期值
  21   1          DRV_DTR = PWM_LOAD_DEADTIME - 1;    // 死区时间
  22   1          DRV_DR  = 0;
  23   1          DRV_CMR &= 0x003f;  //UH/VH/WH UL/VL/WL High level active
  24   1          DRV_OUT &= 0x80;    //UH/VH/WH UL/VL/WL Idle level is 0
  25   1          ClrBit(DRV_SR, FGIE);   //FG中断使能            0-->Disable     1-->Enable
  26   1          
  27   1          ClrBit(DRV_SR, DCIF);   //清除DRV中断标志位
  28   1          /**************************************************
  29   1              DRV比较匹配中断模式
  30   1              当计数值等于DRV_COMR时，根据DCIM的设置判断是否产生中断标记
  31   1              00：不产生中断        01：上升方向
  32   1              10：下降方向         11：上升/下降方向
  33   1          *************************************************/
  34   1          SetBit(DRV_SR, DCIM1);
  35   1          ClrBit(DRV_SR, DCIM0);
  36   1          /*设置DRV计数器的比较匹配值，当DRV计数值与COMR相等时，根据DRV_SR寄存器的DCI
             -M是否产生比较匹配事件*/
  37   1          DRV_COMR = (PWM_VALUE_LOAD >> 3);
  38   1          PDRV1 = 1;// 中断优先级设置为2，优先级低于FO硬件过流
  39   1          PDRV0 = 0;
  40   1          ClrBit(DRV_SR, DCIP);   //0-->1个计数周期产生中断  1-->2个计数周期产生中断
  41   1          ClrBit(DRV_CR, FOCEN);
  42   1          /*  MESEL为0，ME模块工作在BLDC模式
  43   1              MESEL为1，ME模块工作在FOC/SVPWM/SPWM模式*/
  44   1          SetBit(DRV_CR, MESEL);
  45   1          SetBit(DRV_CR, DRVEN);  //计数器使能       0-->Disable     1-->Enable
  46   1          ClrBit(DRV_CR, DRPE);   //计数器比较值预装载使能 0-->Disable             1-->Enable
  47   1          SetBit(DRV_CR, DRVOE);  //Driver输出使能0-->Disable     1-->Enable
  48   1          MOE = 1;
  49   1      }


